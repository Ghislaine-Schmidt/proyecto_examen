<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Referencia</th>
      <th>Edificio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.numero %></td>
        <td><%= apartment.referencia %></td>
        <td><%= apartment.building_id %></td>
        <td><%= link_to 'Show', apartment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
